#!/bin/sh

### BEGIN INIT INFO
# Provides:          sskd
# Required-Start:    $local_fs
# Required-Stop:     $local_fs
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: SnapshotKit daemon
### END INIT INFO

# Ruta al ejecutable de sskd
DAEMON_BIN=/usr/bin/sskd
LOGFILE=/var/log/sskd.log
PIDFILE=/run/sskd.pid
DAEMON=sskd
DESC="Snapshot manager"

# Funci贸n para iniciar el servicio
start() {
    echo "Starting $DESC: $DAEMON..."
    $DAEMON_BIN $DAEMON_OPTS >> $LOGFILE 2>&1 & echo -n $! > $PIDFILE
}

# Funci贸n para detener el servicio
stop() {
    echo "Stopping $DESC: $DAEMON..."
    pkill --pidfile $PIDFILE && rm $PIDFILE
}

# Funci贸n para reiniciar el servicio
restart() {
    stop
    start
}

# Funci贸n para verificar el estado del servicio
status() {
    if pgrep -F "$PIDFILE" > /dev/null
    then
	    pid=$(cat $PIDFILE)
	    echo "$DAEMON is running. PID: $pid."
	    ps -p $pid -o %cpu,%mem

    else
        echo "$DAEMON is not running."
    fi
}

# Evaluamos los argumentos del script
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    status)
		status
	;;
    *)
        echo "Uso: $0 {start|stop|restart|status}"
        exit 1
        ;;
esac

exit 0
